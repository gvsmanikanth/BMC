<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Create live-copy"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <cmd
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                        ignoreData="{Boolean}true"
                        name="cmd"
                        value="createLiveCopy"/>
                    <hiddenSrc
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                        fieldLabel="Source"
                        name="srcPath"
                        value="${param.currentPage}"/>
                    <source
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        disabled="{Boolean}true"
                        fieldLabel="Source"
                        name="source"/>
                    <name
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Provide aname for your Live Copy."
                        fieldLabel="Name"
                        name="label"
                        required="true"
                        validation="foundation.jcr.name"/>
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Provide a title for your Live Copy."
                        fieldLabel="Title"
                        name="title"
                        required="true"/>
                    <excludesubpages
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        checked="{Boolean}false"
                        fieldDescription="If checked, sub pages of selected page above will not be copied and it will be possible to select them individually as new Live Copy."
                        name="shallow"
                        text="Exclude sub pages"
                        value="true"/>
                    <rolloutconfigs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        emptyText="Select"
                        fieldDescription="Select some optional Rollout Configs."
                        fieldLabel="Rollout Configs"
                        multiple="{Boolean}true"
                        name="cq:rolloutConfigs"
                        translateOptions="{Boolean}[true]">
                        <datasource
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="wcm/msm/components/datasources/rolloutconfig"/>
                    </rolloutconfigs>
                    <hiddenDestPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                        name="destPath"
                        value="${param.parentPath}"/>
                </items>
            </column>
        </items>
    </content>
    <creator
        jcr:primaryType="nt:unstructured"
        sling:resourceType="cq/experience-fragments/components/admin/createlivecopy/page"/>
</jcr:root>
