<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:vlt="http://www.day.com/jcr/vault/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:mixinTypes="[vlt:FullCoverage]"
    jcr:primaryType="sling:OrderedFolder"
    sling:resourceType="cq/gui/components/authoring/sidepanel"
    id="SidePanel">
    <header jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <toolbar
                granite:class="granite-actionbar"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <actionbar
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <centerwrapper
                                granite:class="granite-actionbar-centerwrapper"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        granite:class="granite-actionbar-center"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <headertitle
                                                granite:class="granite-title sidepanel-header-title"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/text"/>
                                        </items>
                                    </title>
                                </items>
                            </centerwrapper>
                            <actions
                                granite:class="granite-actionbar-right"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <close
                                        granite:class="toggle-sidepanel header-action"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/button"
                                        icon="close"
                                        title="Toggle Side Panel"
                                        variant="minimal"/>
                                </items>
                            </actions>
                        </items>
                    </actionbar>
                </items>
            </toolbar>
        </items>
    </header>
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <edit-panel
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/include"
                path="/mnt/overlay/cq/experience-fragments/content/editor/jcr:content/sidepanels/edit"/>
            <empty-panel
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/include"
                path="/mnt/overlay/wcm/core/content/editor/jcr:content/sidepanels/empty"/>
        </items>
    </content>
</jcr:root>
