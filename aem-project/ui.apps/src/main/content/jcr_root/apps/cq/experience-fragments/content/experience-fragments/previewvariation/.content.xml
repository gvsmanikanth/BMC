<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        jcr:primaryType="nt:unstructured"
        jcr:title="Post experience fragment variation preview"
        sling:resourceType="granite/ui/components/shell/propertiespage">
        <head jcr:primaryType="nt:unstructured">
            <viewport
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/admin/page/viewport"/>
            <meta
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/meta"
                content="chrome=1"
                name="X-UA-Compatible"/>
            <favicon
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/page/favicon"/>
            <clientlibs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                categories="[cq.experience-fragments.content.previewvariation]"/>
        </head>
        <actions jcr:primaryType="nt:unstructured">
            <publish
                granite:class="foundation-collection-action foundation-collection-action-publish"
                granite:id="sm-publish-action"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                icon="usersShare"
                text="Post"
                variant="quiet"/>
            <delete
                granite:class="foundation-collection-action foundation-collection-action-delete"
                granite:id="sm-delete-action"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                icon="usersExclude"
                text="Remove post"
                variant="quiet"/>
            <smlink
                granite:class="foundation-collection-action foundation-collection-action-globe"
                granite:id="sm-smlink-action"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                icon="globe"
                text="Go to Social Media"
                variant="quiet"/>
        </actions>
        <content
            granite:class="sm-publish-preview-container"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container"
            margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
                <variation
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="cq/experience-fragments/components/xfpage/preview"/>
            </items>
        </content>
    </jcr:content>
</jcr:root>
