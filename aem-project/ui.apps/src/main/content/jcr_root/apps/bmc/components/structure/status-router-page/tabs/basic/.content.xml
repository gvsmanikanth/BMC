<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Basic"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
        <column jcr:primaryType="nt:unstructured">
            <items jcr:primaryType="nt:unstructured">
                <fieldset
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Status Router Config"
                    sling:orderBefore="title"
                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <availableCheckbox
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            name="./available"
                            text="Target Available"
                            value="true"/>
                        <availableType
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                            name="./available@TypeHint"
                            value="Boolean"/>
                        <urlProd
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldDescription="Enter the Production Destination URL for the service router"
                            fieldLabel="Destination URL Production"
                            name="./destination_url"/>
                        <urlStage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldDescription="Enter the Stage Destination URL for the service router"
                            fieldLabel="Destination URL Stage"
                            name="./destination_url_stage"/>
                        <urlDev
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldDescription="Enter the Dev Destination URL for the service router"
                            fieldLabel="Destination URL Dev"
                            name="./destination_url_dev"/>
                    </items>
                </fieldset>
            </items>
        </column>
    </items>
</jcr:root>
