<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Header Topic"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <html
                jcr:primaryType="nt:unstructured"
                jcr:title="Header Text"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Use Title case."
                                fieldLabel="Title (H1)"
                                name="./title"/>
                            <subTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Use sentence case."
                                fieldLabel="Subtitle (H2) (optional)"
                                name="./subTitle"/>
                            <headerImage
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Header Image"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Background image"
                                                fileNameParameter="./bg/fileName"
                                                fileReferenceParameter="./bg/fileReference"
                                                mimeTypes="[image]"
                                                multiple="{Boolean}false"
                                                name="./bg/file"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </headerImage>
                            <ctaButtonColor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Green = Trial; Blue = Video"
                                fieldLabel="CTA Button Color (optional)"
                                multiple="{Boolean}false"
                                name="./ctaButtonColor">
                                <items jcr:primaryType="nt:unstructured">
                                    <blue
                                        jcr:primaryType="nt:unstructured"
                                        text="Blue (primary)"
                                        value="btn"/>
                                    <green
                                        jcr:primaryType="nt:unstructured"
                                        text="Green (secondary)"
                                        value="btn btn-secondary"/>
                                    <orange
                                        jcr:primaryType="nt:unstructured"
                                        text="Orange (corporate)"
                                        value="btn btn-corporate"/>
                                </items>
                            </ctaButtonColor>
                            <ctaButtonText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Use sentence case."
                                fieldLabel="CTA Button Text (optional)"
                                name="./ctaButtonText"/>
                            <ctaButtonURL
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Select a page using the path tool, or enter an external HTTP link"
                                fieldLabel="CTA Button URL (optional)"
                                name="./ctaButtonURL"/>
                            <assetBar
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                eaem-max-items="3"
                                fieldLabel="Asset Bar">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    name="./assetBar"
                                    wrapperClass="core-wcm-form-options-toggle-set">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <assetType
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Select Asset Type"
                                                    multiple="{Boolean}false"
                                                    name="./assetType"
                                                    wrapperClass="core-wcm-form-options-toggle">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <noneselected
                                                            jcr:primaryType="nt:unstructured"
                                                            text="none selected"
                                                            value="custom"/>
                                                        <analystReport
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Analyst report"
                                                            value="Analyst report"/>
                                                        <analystResearch
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Analyst research"
                                                            value="Analyst research"/>
                                                        <assessmentTool
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Assessment tool"
                                                            value="Assessment tool"/>
                                                        <caseStudy
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Case study"
                                                            value="Case study"/>
                                                        <customerStory
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Customer story"
                                                            value="Customer story"/>
                                                        <dataSheet
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Datasheet"
                                                            value="Datasheet"/>
                                                        <demo
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Demo"
                                                            value="Demo"/>
                                                        <eBook
                                                            jcr:primaryType="nt:unstructured"
                                                            text="E-book"
                                                            value="E-book"/>
                                                        <onDemandDemo
                                                            jcr:primaryType="nt:unstructured"
                                                            text="On-demand demo"
                                                            value="On-demand demo"/>
                                                        <solutionOverview
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Solution overview"
                                                            value="Solution overview"/>
                                                        <solutionBrief
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Solution brief"
                                                            value="Solution brief"/>
                                                        <video
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Video"
                                                            value="Video"/>
                                                        <webinar
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Webinar"
                                                            value="Webinar"/>
                                                        <White_x0020_paper
                                                            jcr:primaryType="nt:unstructured"
                                                            text="White paper"
                                                            value="White paper"/>
                                                    </items>
                                                </assetType>
                                                <customAssetType
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Alternative Custom Asset Type"
                                                    fieldLabel="Custom Asset Type (Optional)"
                                                    name="./customAssetType"
                                                    wrapperClass="core-wcm-form-options-toggle-item"/>
                                                <iconImagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Select Path"
                                                    fieldLabel="Icon Image Path "
                                                    name="./iconImagePath"
                                                    rootPath="/content/dam"/>
                                                <assetTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Asset Description: Use sentence case. Asset Title: Use Title case."
                                                    fieldLabel="Asset Description or Title"
                                                    name="./assetTitle"/>
                                                <callToActionText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldDescription="Use sentence case."
                                                    fieldLabel="Call to Action Text"
                                                    multiple="{Boolean}false"
                                                    name="./ctaText"
                                                    wrapperClass="core-wcm-form-options-toggle">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <noneselected
                                                            jcr:primaryType="nt:unstructured"
                                                            text="none selected"
                                                            value="custom"/>
                                                        <download-e-book
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Download e-book"
                                                            value="Download e-book"/>
                                                        <downloadNow
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Download now"
                                                            value="Download now"/>
                                                        <downloadReport
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Download report"
                                                            value="Download report"/>
                                                        <readTheStory
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Read the story"
                                                            value="Read the story"/>
                                                        <registerToView
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Register to view"
                                                            value="Register to view"/>
                                                        <tryNow
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Try now"
                                                            value="Try now"/>
                                                        <watchNow
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Watch now"
                                                            value="Watch now"/>
                                                    </items>
                                                </callToActionText>
                                                <customCtaText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Use sentence case."
                                                    fieldLabel="Optional: custom cta text"
                                                    name="./customCtaText"/>
                                                <ctaURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Select a page using the path tool, or enter an external HTTP link"
                                                    fieldLabel="Call to Action URL"
                                                    name="./ctaPath"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </assetBar>
                            <orangeBarText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Use sentence case."
                                fieldLabel="Orange Bar Text (optional)"
                                name="./orangeBarText"/>
                            <orangeBarCtaText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Use sentence case."
                                fieldLabel="Orange Bar Call to Action Text (optional)"
                                name="./orangeBarCtaText"/>
                            <orangeBarCtaURL
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Select a page using the path tool, or enter an external HTTP link"
                                fieldLabel="Orange Bar Call to Action URL (optional)"
                                name="./orangeBarCtaURL"/>
                        </items>
                    </column>
                </items>
            </html>
        </items>
    </content>
</jcr:root>
