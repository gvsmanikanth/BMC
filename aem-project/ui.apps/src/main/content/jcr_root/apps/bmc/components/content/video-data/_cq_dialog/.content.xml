<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Video Data"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[bmc.components.video-data.dialog]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <html
                jcr:primaryType="nt:unstructured"
                jcr:title="Video Player"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <typeId
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                class="cq-dialog-radiogroup-showhide"
                                cq-dialog-radiogroup-showhide-target=".video-type-container"
                                fieldDescription="Video Provider"
                                fieldLabel="Video Type"
                                name="./typeId"
                                renderReadOnly="{Boolean}false"
                                required="{Boolean}true"
                                text="Video Type">
                                <items jcr:primaryType="nt:unstructured">
                                    <youtube
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/radio"
                                        cq-msm-lockable="typeId"
                                        name="./typeId"
                                        renderReadOnly="{Boolean}true"
                                        text="YouTube"
                                        value="1"/>
                                    <dam
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/radio"
                                        cq-msm-lockable="typeId"
                                        name="./typeId"
                                        renderReadOnly="{Boolean}true"
                                        text="DAM"
                                        value="3"/>
                                </items>
                            </typeId>
                            <typeIdHint
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./typeId@TypeHint"
                                value="Integer"/>
                            <videoId
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                class="hide video-type-container"
                                fieldDescription="Ex: rOohsNwkT5Q"
                                fieldLabel="Video ID"
                                name="./vID"
                                required="{Boolean}true"
                                showhidetargetvalue="1,2"/>
                            <damVideoPathContainer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="hide video-type-container"
                                showhidetargetvalue="3">
                                <items jcr:primaryType="nt:unstructured">
                                    <damVideoPath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Please select a video"
                                        fieldLabel="Video Path"
                                        name="./damVideoPath"
                                        required="{Boolean}true"
                                        rootPath="/content/dam"/>
                                </items>
                            </damVideoPathContainer>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter the video title"
                                fieldLabel="Title"
                                name="./title"
                                required="{Boolean}true"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldDescription="Enter the video description"
                                fieldLabel="Description"
                                name="./description"/>
                            <overlayContainer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="hide video-type-container"
                                showhidetargetvalue="1">
                                <items jcr:primaryType="nt:unstructured">
                                    <overlayText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldDescription="Text to be overlaid on video when/if it is paused. Can contain a pair of markers, LINK- and -LINK wrapping some of the text, causing it to link to the Overlay URL"
                                        fieldLabel="Overlay Text"
                                        name="./overlayText"/>
                                    <overlayUrl
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="To create a link from the Overlay Text, enter an external URL here (beginning with http(s):) or use the path picker to link to an internal page"
                                        fieldLabel="Overlay URL"
                                        name="./overlayUrl"
                                        rootPath="/content/bmc"/>
                                </items>
                            </overlayContainer>
                            <videoLength
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Length(Duration) of the video in Minutes."
                                fieldLabel="Video Length."
                                name="./videoLength"/>
                            <learnMore
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="When checked, the overlay text will be appended with '›'."
                                name="./learnMore"
                                text="Append '›' to the Overlay text?"
                                value="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </html>
        </items>
    </content>
</jcr:root>
