<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Cards"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <columns
                jcr:primaryType="nt:unstructured"
                jcr:title="Product Cards"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Use Title case."
                                fieldLabel="Title"
                                name="./title"/>
                            <subTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Use sentence case."
                                fieldLabel="Subtitle (optional)"
                                name="./subTitle"/>
                            <cards
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Cards">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                    name="./cards">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <imagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Please select the image"
                                                    fieldLabel="Product Image Path"
                                                    name="./imagePath"
                                                    rootPath="/content/dam/bmc"/>
                                                <overrrideTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Use Title case."
                                                    fieldLabel="Override Title (optional)"
                                                    name="./overrideTitle"/>
                                                <overrideDescription
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldDescription="Use sentence case."
                                                    fieldLabel="overrideDescription (Optional)"
                                                    name="./overrideDescription"/>
                                                <pagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Please select the product page"
                                                    fieldLabel="Product page path"
                                                    name="./pagePath"
                                                    required="{Boolean}true"
                                                    rootPath="/content/bmc"/>
                                                <callToActionText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldDescription="Select a call to action."
                                                    fieldLabel="Call to Action Text"
                                                    multiple="{Boolean}false"
                                                    name="./ctaText"
                                                    wrapperClass="core-wcm-form-options-toggle">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <noneselected
                                                            jcr:primaryType="nt:unstructured"
                                                            text="none selected"
                                                            value="custom"/>
                                                        <download-e-book
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Download e-book"
                                                            value="Download e-book"/>
                                                        <downloadNow
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Download now"
                                                            value="Download now"/>
                                                        <downloadReport
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Download report"
                                                            value="Download report"/>
                                                        <readTheStory
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Read the story"
                                                            value="Read the story"/>
                                                        <registerToView
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Register to view"
                                                            value="Register to view"/>
                                                        <tryNow
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Try now"
                                                            value="Try now"/>
                                                        <watchNow
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Watch now"
                                                            value="Watch now"/>
                                                    </items>
                                                </callToActionText>
                                                <customCtaText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="If 'none selected' above, then enter custom text. Use sentence case."
                                                    fieldLabel="Custom CTA Text (optional)"
                                                    name="./customCtaText"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </cards>
                            <numberOfCards
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Number of cards per row. If none selected defaults to 4"
                                multiple="{Boolean}false"
                                name="./numberOfCards">
                                <items jcr:primaryType="nt:unstructured">
                                    <noneselected
                                        jcr:primaryType="nt:unstructured"
                                        text="none selected"
                                        value=""/>
                                    <_x0033_
                                        jcr:primaryType="nt:unstructured"
                                        text="3"
                                        value="3"/>
                                    <_x0034_
                                        jcr:primaryType="nt:unstructured"
                                        text="4"
                                        value="4"/>
                                </items>
                            </numberOfCards>
                        </items>
                    </column>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>
