<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Support Central Navigation Component."
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <supportNavigation
                jcr:primaryType="nt:unstructured"
                jcr:title="Support Navigation."
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <list
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="bmc-cq-dialog-add-heading-name"
                                label="Add Main Menu Heading.">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested="JSON_STORE"
                                    name="./tabs">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <navigationHeader
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Main Header for Navigation Item."
                                                    fieldLabel="Navigation Header."
                                                    name="./tabTitle"
                                                    required="{Boolean}true"/>
                                                <listItems
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/multifield"
                                                    class="bmc-cq-dialog-add-resource-name"
                                                    fieldLabel="Sub menu Items"
                                                    label="Add Sub Menu item.">
                                                    <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                                        acs-commons-nested="JSON_STORE"
                                                        name="./tabLinks">
                                                        <layout
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                            method="absolute"/>
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <column
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <NavigationPath
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                        fieldDescription="Use the path picker to select a page within the site.(*required field)"
                                                                        fieldLabel="Navigation link Path"
                                                                        name="./url"
                                                                        required="{Boolean}true"
                                                                        rootPath="/content"/>
                                                                    <className
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                        fieldLabel="Class name for the field"
                                                                        name="./class"/>
                                                                    <NavigationTitle
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                        fieldDescription="Enter the sub navigation title.(*required field)"
                                                                        fieldLabel="Navigation Title"
                                                                        name="./title"
                                                                        required="{Boolean}true"/>
                                                                    <targetType
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                                        fieldLabel="Select target Type"
                                                                        multiple="{Boolean}false"
                                                                        name="./target">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <new
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="new"
                                                                                value="_blank"/>
                                                                            <self
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="self"
                                                                                value="_self"/>
                                                                        </items>
                                                                    </targetType>
                                                                </items>
                                                            </column>
                                                        </items>
                                                    </field>
                                                </listItems>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </list>
                        </items>
                    </column>
                </items>
            </supportNavigation>
        </items>
    </content>
</jcr:root>
