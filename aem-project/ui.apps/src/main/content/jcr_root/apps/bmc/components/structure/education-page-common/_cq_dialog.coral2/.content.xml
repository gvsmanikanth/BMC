<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[]">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <metadata
                        cq:showOnCreate="false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Metadata"
                        sling:orderBefore="advanced"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <metadata
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Metadata"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[topics]">
                                            <education-product-name
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyText="Select product to add"
                                                fieldLabel="Education Products"
                                                metadataName="EDUCATION_PRODUCTS"
                                                multiple="true"
                                                name="./education-products">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="education-products"/>
                                            </education-product-name>
                                            <education-version-number
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyText="Select applicable version numbers"
                                                fieldLabel="Version Numbers"
                                                metadataName="EDUCATION_VERSION_NUMBERS"
                                                multiple="true"
                                                name="./education-version-numbers">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="education-version-numbers"/>
                                            </education-version-number>
                                            <education-broad-roles
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyText="Select applicable roles"
                                                fieldLabel="Education Broad Role"
                                                metadataName="EDUCATION_BROAD_ROLES"
                                                multiple="true"
                                                name="./education-broad-roles">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="education-broad-roles"/>
                                            </education-broad-roles>
                                            <education-specific-role
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyText="Select applicable roles"
                                                fieldLabel="Education Specific Role"
                                                metadataName="EDUCATION_SPECIFIC_ROLES"
                                                multiple="true"
                                                name="./education-specific-role">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="education-specific-role"/>
                                            </education-specific-role>
                                            <course-delivery
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyText="Select course delivery method"
                                                fieldLabel="Course Delivery"
                                                metadataName="COURSE_DELIVERY"
                                                multiple="true"
                                                name="./course-delivery">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="course-delivery"/>
                                            </course-delivery>
                                            <education-specific-type
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyText="Select course type"
                                                fieldLabel="Course Type"
                                                metadataName="EDUCATION_SPECIFIC_TYPES"
                                                multiple="true"
                                                name="./education-specific-types">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="education-specific-types"/>
                                            </education-specific-type>
                                            <course-duration
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="1.00"
                                                fieldLabel="Course Duration"
                                                name="./course-duration"/>
                                            <promoted-course
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Check if this course is promoted"
                                                name="./isPromotedCourse"
                                                text="Is this course promoted?"
                                                value="{Boolean}true"/>
                                            <accreditation-available
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Check if accreditation is available for this course"
                                                name="./isAccreditationAvailable"
                                                text="Is accreditation available for this course?"
                                                value="{Boolean}true"/>
                                            <recommended-prerequisites
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldLabel="Recommended Prerequisites">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                                    name="./prerequisites">
                                                    <layout
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                        method="absolute"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <product
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    fieldDescription="Please select the course page"
                                                                    fieldLabel="Course"
                                                                    name="./internalPagePath"
                                                                    required="{Boolean}true"
                                                                    rootPath="/content/bmc"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </recommended-prerequisites>
                                        </items>
                                    </metadata>
                                </items>
                            </column>
                        </items>
                    </metadata>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
