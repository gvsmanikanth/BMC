<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="SuccessService"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.image.v1.editor]">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <success-service
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Success Service"
                        sling:orderBefore="advanced"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <sucessServicePage
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Success Service Pages"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <service-type
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/service-types"
                                                emptyText="Select service type "
                                                fieldLabel="Service Type"
                                                multiple="{Boolean}false"
                                                name="./service-types">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </service-type>
                                            <availability
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyText="Select availability"
                                                fieldLabel="Availability"
                                                name="./availability">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Active"
                                                        value="Active"/>
                                                    <item2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Inactive"
                                                        value="Inactive"/>
                                                </items>
                                            </availability>
                                            <no-of-credits
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                fieldDescription="Enter the no of credits here"
                                                fieldLabel="No Of Credits"
                                                max="100"
                                                min="1"
                                                name="./credits"/>
                                        </items>
                                    </sucessServicePage>
                                </items>
                            </column>
                        </items>
                    </success-service>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
