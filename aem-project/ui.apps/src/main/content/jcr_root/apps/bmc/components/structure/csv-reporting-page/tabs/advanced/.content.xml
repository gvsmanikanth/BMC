<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Advanced"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
        <column jcr:primaryType="nt:unstructured">
            <items jcr:primaryType="nt:unstructured">
                <basic
                    jcr:primaryType="nt:unstructured"
                    jcr:title="CSV Reporting Service."
                    sling:orderBefore="title"
                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <reportType
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            fieldDescription="Please select the report type."
                            fieldLabel="Report Type"
                            name="./reportType"
                            text="Report Type">
                            <items jcr:primaryType="nt:unstructured">
                                <item1
                                    jcr:primaryType="nt:unstructured"
                                    text="Forms Data Report"
                                    value="form"/>
                                <item3
                                    jcr:primaryType="nt:unstructured"
                                    text="Experience Fragment Report"
                                    value="experienceFragmentGeneric"/>
                                <item2
                                    jcr:primaryType="nt:unstructured"
                                    text="Video Data Report."
                                    value="video"/>
                                <item4
                                    jcr:primaryType="nt:unstructured"
                                    text="IT-Solutions Metadata report."
                                    value="it-solutions"/>
                                <item5
                                    jcr:primaryType="nt:unstructured"
                                    text="Education Courses Report"
                                    value="education-courses"/>
                                <item6
                                    jcr:primaryType="nt:unstructured"
                                    text="Sticky Headers Report"
                                    value="sticky-headers"/>
                                <item7
                                    jcr:primaryType="nt:unstructured"
                                    text="Status Router"
                                    value="status-router"/>
                                <item8
                                    jcr:primaryType="nt:unstructured"
                                    text="FORM XF Report"
                                    value="experienceFragmentForms"/>
                                <item9
                                    jcr:primaryType="nt:unstructured"
                                    text="Customers Report"
                                    value="customers"/>
                                <item10
                                        jcr:primaryType="nt:unstructured"
                                        text="Document Containers Report"
                                        value="document-containers"/>
                            </items>
                        </reportType>
                        <reportFileName
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldDescription="Enter the reportFileName."
                            fieldLabel="report File Name"
                            name="./reportFileName"/>
                        <reportFileLocation
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                            fieldDescription="Enter the content path for which you ,want the Report."
                            fieldLabel="Please select a form path."
                            name="./reportFileLocation"/>
                    </items>
                </basic>
            </items>
        </column>
    </items>
</jcr:root>
