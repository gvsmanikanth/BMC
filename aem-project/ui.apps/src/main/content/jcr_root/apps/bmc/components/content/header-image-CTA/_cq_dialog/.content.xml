<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Header Image with CTAs"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <html
                jcr:primaryType="nt:unstructured"
                jcr:title="Header Text"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter the heading text"
                                fieldLabel="Enter the heading text"
                                name="./headerText"/>

                            <subheading
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter the sub-heading text"
                                    fieldLabel="Enter the sub-heading text"
                                    name="./subHeaderText"/>

                            <introText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                    fieldDescription="Enter the optional paragraph text (should not be used in conjunction with CTA buttons)"
                                    fieldLabel="Optional paragraph text"
                                    name="./introText"/>

                            <bg-image
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Background Image"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <file
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    autoStart="{Boolean}false"
                                                    class="cq-droptarget"
                                                    fieldLabel="Background image"
                                                    fileNameParameter="./bg/fileName"
                                                    fileReferenceParameter="./bg/fileReference"
                                                    mimeTypes="[image]"
                                                    multiple="{Boolean}false"
                                                    name="./bg/file"
                                                    title="Upload Image Asset"
                                                    uploadUrl="${suffix.path}"
                                                    useHTML5="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </bg-image>

                            <cta1text
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Optional: Enter the 1st button text"
                                    fieldLabel="Optional: Enter the 1st button text (if blank, no button rendered)"
                                    name="./cta1text"/>
                            <cta1path
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Optional: Select the asset this button links to"
                                    fieldLabel="Optional: Select the asset the 1st button links to"
                                    name="./cta1url"/>

                            <cta2text
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Optional: Enter the 2nd button text"
                                    fieldLabel="Optional: Enter the 2nd button text (if blank, no button rendered)"
                                    name="./cta2text"/>
                            <cta2path
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Optional: Select the asset this button links to"
                                    fieldLabel="Optional: Select the asset the 2nd button links to"
                                    name="./cta2url"/>

                            <cta3text
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Optional: Enter the 3rd button text"
                                    fieldLabel="Optional: Enter the 3rd button text (if blank, no button rendered)"
                                    name="./cta3text"/>
                            <cta3path
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Optional: Select the asset this button links to"
                                    fieldLabel="Optional: Select the asset 3rd button links to"
                                    name="./cta3url"/>
                        </items>
                    </column>
                </items>
            </html>
        </items>
    </content>
</jcr:root>
