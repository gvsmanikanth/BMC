<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="FeaturedAsset2 Component"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.image.v1.editor]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <text
                jcr:primaryType="nt:unstructured"
                jcr:title="Text"
                sling:orderBefore="image"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <assetsHeadingPrefix
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Select asset type heading "
                                multiple="{Boolean}false"
                                name="./assetsHeadingPrefix">
                                <items jcr:primaryType="nt:unstructured">
                                    <noneselected
                                        jcr:primaryType="nt:unstructured"
                                        text="none selected"
                                        value=""/>
                                    <datasheet
                                        jcr:primaryType="nt:unstructured"
                                        text="Datasheet"
                                        value="Datasheet"/>
                                    <datasheets
                                        jcr:primaryType="nt:unstructured"
                                        text="Datasheets"
                                        value="Datasheets"/>
                                    <white-paper
                                        jcr:primaryType="nt:unstructured"
                                        text="White paper"
                                        value="White paper"/>
                                    <white-papers
                                        jcr:primaryType="nt:unstructured"
                                        text="White papers"
                                        value="White papers"/>
                                    <solution-overview
                                        jcr:primaryType="nt:unstructured"
                                        text="Solution overview"
                                        value="Solution overview"/>
                                    <solution-overviews
                                        jcr:primaryType="nt:unstructured"
                                        text="Solution overviews"
                                        value="Solution overviews"/>
                                    <solution-brief
                                        jcr:primaryType="nt:unstructured"
                                        text="Solution brief"
                                        value="Solution brief"/>
                                    <solution-briefs
                                        jcr:primaryType="nt:unstructured"
                                        text="Solution briefs"
                                        value="Solution briefs"/>
                                    <analyst-research
                                        jcr:primaryType="nt:unstructured"
                                        text="Analyst research"
                                        value="Analyst research"/>
                                    <case-study
                                        jcr:primaryType="nt:unstructured"
                                        text="Case study"
                                        value="Case study"/>
                                    <case-studies
                                        jcr:primaryType="nt:unstructured"
                                        text="Case studies"
                                        value="Case studies"/>
                                    <customer-story
                                        jcr:primaryType="nt:unstructured"
                                        text="Customer story"
                                        value="Customer story"/>
                                    <customer-stories
                                        jcr:primaryType="nt:unstructured"
                                        text="Customer stories"
                                        value="Customer stories"/>
                                    <video
                                        jcr:primaryType="nt:unstructured"
                                        text="Video"
                                        value="Video"/>
                                    <videos
                                        jcr:primaryType="nt:unstructured"
                                        text="Videos"
                                        value="Videos"/>
                                    <demo
                                        jcr:primaryType="nt:unstructured"
                                        text="Demo"
                                        value="Demo"/>
                                    <demos
                                        jcr:primaryType="nt:unstructured"
                                        text="Demos"
                                        value="Demos"/>
                                    <on-demand-demo
                                        jcr:primaryType="nt:unstructured"
                                        text="On-demand demo"
                                        value="On-demand demo"/>
                                    <on-demand-demos
                                        jcr:primaryType="nt:unstructured"
                                        text="On-demand demos"
                                        value="On-demand demos"/>
                                    <webinar
                                        jcr:primaryType="nt:unstructured"
                                        text="Webinar"
                                        value="Webinar"/>
                                    <webinars
                                        jcr:primaryType="nt:unstructured"
                                        text="Webinars"
                                        value="Webinars"/>
                                    <e-book
                                        jcr:primaryType="nt:unstructured"
                                        text="E-Book"
                                        value="E-Book"/>
                                    <e-books
                                        jcr:primaryType="nt:unstructured"
                                        text="E-Books"
                                        value="E-Books"/>
                                    <infographic
                                        jcr:primaryType="nt:unstructured"
                                        text="Infographic"
                                        value="Infographic"/>
                                    <infographics
                                        jcr:primaryType="nt:unstructured"
                                        text="Infographics"
                                        value="Infographics"/>
                                </items>
                            </assetsHeadingPrefix>
                            <customAssetHeading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="You may add your own custom text for the asset heading here."
                                fieldLabel="Optional: custom asset heading text."
                                name="./customAssetHeading"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter the title"
                                fieldLabel="Title"
                                name="./title"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter the Description."
                                fieldLabel="Description(Optional)."
                                name="./description"/>
                            <bgcolor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Choose the color"
                                fieldLabel="Background color"
                                name="./bg_color">
                                <items jcr:primaryType="nt:unstructured">
                                    <item1
                                        jcr:primaryType="nt:unstructured"
                                        text="Grey"
                                        value="grey"/>
                                    <item2
                                        jcr:primaryType="nt:unstructured"
                                        text="White"
                                        value="white"/>
                                </items>
                            </bgcolor>
                            <cta-text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter the CTA text"
                                fieldLabel="CTA Link Text"
                                name="./cta_text"/>
                            <cta-url
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Enter the CTA URL"
                                fieldLabel="CTA URL"
                                name="./cta_url"/>
                            <image_x0020_Location
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Select the Image Placement"
                                fieldLabel="Image Location"
                                name="./image_location">
                                <items jcr:primaryType="nt:unstructured">
                                    <item1
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="left"/>
                                    <item2
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="right"/>
                                </items>
                            </image_x0020_Location>
                            <addVideoIcon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                checked="{Boolean}false"
                                fieldDescription="Check to add the video icon to image."
                                name="./addVideoIcon"
                                text="Add Video Icon."
                                uncheckedValue="false"
                                value="true"/>
                        </items>
                    </column>
                </items>
            </text>
            <image jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <column jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <decorative
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <alt
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}false"/>
                            <linkURL
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <caption
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <displayCaptionPopup
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </image>
        </items>
    </content>
</jcr:root>
