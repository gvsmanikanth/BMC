<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="CustomerStoryList"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <columns
                    jcr:primaryType="nt:unstructured"
                    jcr:title="CustomerStoryList"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <featuredStoryPath
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                    fieldDescription="Please select the featured story page"
                                    fieldLabel="Featured Story"
                                    name="./featuredStoryPath"
                                    rootPath="/content/bmc"
                                    required="{Boolean}true"/>
                            <featuredStoryBackgroundImage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                    fieldDescription="Please select the featured story background image"
                                    fieldLabel="Featured Story Background Image"
                                    name="./featuredStoryBgImgSrc"
                                    rootPath="/content/dam"
                                    required="{Boolean}true"/>

                            <stories jcr:primaryType="nt:unstructured"
                                       sling:resourceType="granite/ui/components/foundation/form/multifield"
                                       fieldLabel="Stories">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                        acs-commons-nested="JSON_STORE"
                                        name="./stories">
                                    <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                            method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <pagePath
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                        fieldDescription="Please select the story page"
                                                        fieldLabel="Story"
                                                        name="./pagePath"
                                                        rootPath="/content/bmc"
                                                        required="{Boolean}true"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </stories>
                        </items>
                    </column>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>
