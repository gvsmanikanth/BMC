<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Page"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[cq.common.wcm,core.wcm.page.properties,cq.wcm.msm.properties]"
          mode="edit">
    <content
            granite:class="cq-dialog-content-page"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    granite:class="cq-siteadmin-admin-properties-tabs"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    size="L">
                <items jcr:primaryType="nt:unstructured" sling:hideChildren="[advanced,thumbnail,socialmedia,cloudservices,personalization,permissions,blueprint,livecopy]">
                    <basic jcr:primaryType="nt:unstructured" cq:showOnCreate="true" cq:hideOnEdit="true"></basic>
                    <form-configuration
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Form Configuration"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            sling:orderBefore="livecopy">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <settings
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Trial Forms"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <trial-forms-disabled
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="Select to disable trial forms."
                                                    text="Disabled"
                                                    cq:showOnCreate="true"
                                                    value="true"
                                                    name="./trialFormsDisabled" />
                                            <enabletype
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                    name="./trialFormsDisabled@TypeHint"
                                                    cq:showOnCreate="true"
                                                    value="Boolean"/>
                                            <trial-form-disabled-content jcr:primaryType="nt:unstructured"
                                                      sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                      fieldDescription="Enter the HTML block to display in place of trial forms."
                                                      fieldLabel="Disabled form HTML block"
                                                      cq:showOnCreate="true"
                                                      name="./trialFormsDisabledContent" />
                                        </items>
                                    </settings>
                                </items>
                            </column>
                        </items>
                    </form-configuration>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
