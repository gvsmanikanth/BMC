<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Resource Center Result Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                maximized="{Boolean}true"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <tab-0
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Config"
                        margin="{Boolean}true"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <path
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldLabel="Root Path"
                                        name="./rootPath"
                                        rootPath="/content/bmc"
                                        value="/content/bmc/en/us"/>
                                    <pageSize
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                        fieldDescription="Defaults to 10 resources."
                                        fieldLabel="Page Size"
                                        value="{Long}10"
                                        max="{Long}100"
                                        min="{Long}1"
                                        multiple="{Boolean}true"
                                        name="./pageSize"/>
                                    <noResultsLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Default Value: We're sorry, it seems like we can't find any results."
                                        fieldLabel="No Results Label"
                                        name="./noResultLabel"/>
                                    <errorLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Default Value: Oops, please try again. It looks like we may be experiencing some technical issues"
                                        fieldLabel="Error Label"
                                        name="./errorLabel"/>
                                </items>
                            </column>
                        </items>
                    </tab-0>
                    <tab-1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Featured Card"
                        margin="{Boolean}true"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <featuredCard
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <path
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldLabel="Featured Resource Path"
                                        name="./path"
                                        rootPath="/content/bmc"/>
                                    <bgcolor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Background color"
                                        multiple="{Boolean}false"
                                        name="./bgColor">
                                        <items jcr:primaryType="nt:unstructured">
                                            <bmc_blue jcr:primaryType="nt:unstructured" text="BMC Blue" value="bg-bmc-blue" />
                                            <bmc_mid_blue jcr:primaryType="nt:unstructured" text="BMC Midblu" value="bg-bmc-mid-blue" />
                                            <bmc_green jcr:primaryType="nt:unstructured" text="BMC Green" value="bg-bmc-green" />
                                            <bmc_mid_green jcr:primaryType="nt:unstructured" text="BMC MidGreen" value="bg-bmc-mid-green" />
                                            <bmc_grey jcr:primaryType="nt:unstructured" text="BMC Grey" value="bg-bmc-grey" />
                                            <bmc_teal jcr:primaryType="nt:unstructured" text="BMC Teal" value="bg-bmc-teal" />
                                            <bmc_light_orange jcr:primaryType="nt:unstructured" text="BMC Light Orange" value="bg-light-orange" />
                                            <gartner_blue jcr:primaryType="nt:unstructured" text="Gartner Blue" value="bg-gartner-blue" />
                                            <forrester_green jcr:primaryType="nt:unstructured" text="Forrester Green" value="bg-forrester-green" />
                                        </items>
                                    </bgcolor>
                                    <backgroundImage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        fieldDescription="please select the featured card background image"
                                        fieldLabel="Featured Card Background Image"
                                        fileNameParameter="./fb/fileName"
                                        fileReferenceParameter="./fb/fileReference"
                                        mimeTypes="[image]"
                                        multiple="{Boolean}false"
                                        name="./fb/file"
                                        title="Upload Image Asset"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true"/>
                                </items>
                            </featuredCard>
                        </items>
                    </tab-0>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
