<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Page"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[core.wcm.components.image.v1.editor]">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <card
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Story Card"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            sling:orderBefore="advanced">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <card
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Story Card"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <logoSrc
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Please select the logo"
                                                    fieldLabel="Logo"
                                                    name="./cardLogoSrc"
                                                    rootPath="/content/dam">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="cardLogoSrc"/>
                                            </logoSrc>
                                            <title
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Title"
                                                    fieldDescription="Enter a card title here to override Basic / Title"
                                                    name="./cardTitle">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="cardTitle"/>
                                            </title>
                                            <description
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Description"
                                                    fieldDescription="Enter a card description here to override the CustomerSpotlight headline"
                                                    name="./cardDescription">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="cardDescription"/>
                                            </description>
                                        </items>
                                    </card>
                                    <secondaryLink
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Secondary Link"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <secondaryLinkText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter the secondary link text"
                                                    fieldLabel="Secondary Link Text"
                                                    name="./cardSecondaryLinkText">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="cardSecondaryLinkText"/>
                                            </secondaryLinkText>
                                            <secondaryLinkUrl
                                                    jcr:primaryType="nt:unstructured"
													sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
													fieldDescription="Enter the secondary link URL"
													fieldLabel="URL"
													name="./cardSecondaryLinkUrl"
													rootPath="/content/bmc">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="cardSecondaryLinkUrl"/>
                                            </secondaryLinkUrl>
                                        </items>
                                    </secondaryLink>
                                </items>
                            </column>
                        </items>
                    </card>
                    <metadata
                            jcr:primaryType="nt:unstructured"
                            cq:showOnCreate="false"
                            jcr:title="Metadata"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            sling:orderBefore="advanced">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <metadata
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Metadata"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured"
                                               sling:hideChildren="[product-interest,productLine1]">
                                            <company-size
                                                    jcr:primaryType="nt:unstructured"
                                                    fieldLabel="Company Size"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    emptyOption="true"
                                                    emptyText="Select company size"
                                                    multiple="false"
                                                    metadataName="company-size"
                                                    name="./companySize">
                                                <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="topics"/>
                                            </company-size>
                                            <industries
                                                    jcr:primaryType="nt:unstructured"
                                                    fieldLabel="Industries"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    emptyText="Select industry to add"
                                                    multiple="true"
                                                    metadataName="industry"
                                                    name="./industries">
                                                <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="industries"/>
                                            </industries>
                                            <topics
                                                    jcr:primaryType="nt:unstructured"
                                                    fieldLabel="Topics"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    emptyText="Select topic to add"
                                                    multiple="true"
                                                    metadataName="topic"
                                                    name="./topics">
                                                <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="topics"/>
                                            </topics>
                                        </items>
                                    </metadata>
                                </items>
                            </column>
                        </items>
                    </metadata>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
