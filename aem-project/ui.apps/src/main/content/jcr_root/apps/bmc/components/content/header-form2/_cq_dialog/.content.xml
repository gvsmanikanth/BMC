<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Header Form 2"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <html
                jcr:primaryType="nt:unstructured"
                jcr:title="Header Text"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <bg-image
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Background Image"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Background image (optional)"
                                                fileNameParameter="./bg/fileName"
                                                fileReferenceParameter="./bg/fileReference"
                                                mimeTypes="[image]"
                                                multiple="{Boolean}false"
                                                name="./bg/file"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </bg-image>
                            <mobileHeaderImage
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Header Image for mobile"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Used for new design"
                                                fieldLabel="Mobile background image"
                                                fileNameParameter="./mbg/fileName"
                                                fileReferenceParameter="./mbg/fileReference"
                                                mimeTypes="[image]"
                                                multiple="{Boolean}false"
                                                name="./mbg/file"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </mobileHeaderImage>
                            <headerBackground
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Default background color: #000000"
                                fieldLabel="Header Background (optional)"
                                multiple="{Boolean}false"
                                name="./headerBackground">
                                <items jcr:primaryType="nt:unstructured">
                                    <select
                                        jcr:primaryType="nt:unstructured"
                                        text="Select an Option."
                                        value="none"/>
                                    <black
                                        jcr:primaryType="nt:unstructured"
                                        text="Black"
                                        value="#000000"/>
                                    <blue
                                        jcr:primaryType="nt:unstructured"
                                        text="Blue"
                                        value="#126CC3"/>
                                    <green
                                        jcr:primaryType="nt:unstructured"
                                        text="Green"
                                        value="#4C9B00"/>
                                    <grey
                                        jcr:primaryType="nt:unstructured"
                                        text="Grey"
                                        value="#5F6165"/>
                                    <lightOrange
                                        jcr:primaryType="nt:unstructured"
                                        text="Light Orange"
                                        value="#FC7A00"/>
                                    <midBlue
                                        jcr:primaryType="nt:unstructured"
                                        text="MidBlue"
                                        value="#0091DD"/>
                                    <midGreen
                                        jcr:primaryType="nt:unstructured"
                                        text="MidGreen"
                                        value="#93B400"/>
                                    <teal
                                        jcr:primaryType="nt:unstructured"
                                        text="Teal"
                                        value="#009A8E"/>
                                </items>
                            </headerBackground>
                        </items>
                    </column>
                </items>
            </html>
        </items>
    </content>
</jcr:root>
