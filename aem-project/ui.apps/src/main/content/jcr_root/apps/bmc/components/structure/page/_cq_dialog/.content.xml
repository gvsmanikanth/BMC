<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/mnt/override/apps/bmc/components/structure/page/tabs/basic"/>
                    <metadata
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Metadata"
                        sling:orderBefore="advanced"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <metadata
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Metadata"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <product-interest
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/product-interests"
                                                emptyText="Select"
                                                fieldDescription="Select Related Products"
                                                fieldLabel="Product"
                                                multiple="{Boolean}true"
                                                name="./product_interest"
                                                textProperty="textEmpty"
                                                useNameAsValue="true"
                                                valueProperty="valueEmpty">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="product_interest"/>
                                            </product-interest>
                                            <productLine1
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                dataPath="/content/bmc/resources/product-lines"
                                                emptyText="Select"
                                                fieldDescription="Select Related Product Lines"
                                                fieldLabel="Product Line"
                                                multiple="{Boolean}true"
                                                name="./product_line">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/apps/bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="product_line"/>
                                            </productLine1>
                                            <topics
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyText="Select topic to add"
                                                fieldDescription="Used for filtering All Products landing"
                                                fieldLabel="Topics"
                                                metadataName="topic"
                                                multiple="true"
                                                name="./topics">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="topics"/>
                                            </topics>
                                            <ic-app-inclusion
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyText="Intelligent Content App Inclusion"
                                                fieldLabel="IC App Inclusion"
                                                name="./ic-app-inclusion">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="No"
                                                        value="no"/>
                                                    <item2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Yes (not gated)"
                                                        value="yes"/>
                                                    <item3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Gate"
                                                        value="gate"/>
                                                    <item4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Gated"
                                                        value="gated"/>
                                                </items>
                                            </ic-app-inclusion>
                                            <ic-content-type
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-types"
                                                emptyText="Intelligent Content Type"
                                                fieldLabel="IC Type"
                                                multiple="{Boolean}true"
                                                name="./ic-content-type">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-content-type>
                                            <ic-weighting
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Used to position content in intelligent content results list. 1 is most important. 5 is least important."
                                                fieldLabel="IC Weighting"
                                                name="./ic-weighting">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="5 (least important)"
                                                        value="5"/>
                                                    <item2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="4"
                                                        value="4"/>
                                                    <item3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="3"
                                                        value="3"/>
                                                    <item4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="2"
                                                        value="2"/>
                                                    <item5
                                                        jcr:primaryType="nt:unstructured"
                                                        text="1 (most important)"
                                                        value="1"/>
                                                </items>
                                            </ic-weighting>
                                            <ic-topics
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-topics"
                                                emptyText="Intelligent Content Topic"
                                                fieldDescription="Used for filtering intelligent content"
                                                fieldLabel="IC Topic"
                                                multiple="{Boolean}true"
                                                name="./ic-topics">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-topics>
                                            <ic-buyer-stage
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-buyer-stage"
                                                emptyText="Intelligent Content Buyer Stage"
                                                fieldLabel="IC Buyer Stage"
                                                multiple="{Boolean}true"
                                                name="./ic-buyer-stage">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-buyer-stage>
                                            <ic-target-persona
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-target-persona"
                                                emptyText="Intelligent Content Target Persona"
                                                fieldLabel="IC Target Persona"
                                                multiple="{Boolean}true"
                                                name="./ic-target-persona">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-target-persona>
                                            <ic-source-publish-date
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/datepicker"
                                                displayedFormat="MM-YYYY"
                                                fieldDescription="Used to specify when the content was created, not when it was published in AEM"
                                                fieldLabel="IC Source Publish Date (MM-YYYY)"
                                                name="./ic-source-publish-date"
                                                type="datetime"
                                                typeHint="IC Source Publish Date (MM-YYYY)"/>
                                            <ic-target-industry
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-target-industry"
                                                emptyText="Intelligent Content Target Industry"
                                                fieldLabel="IC Target Industry"
                                                multiple="{Boolean}true"
                                                name="./ic-target-industry">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-target-industry>
                                            <ic-company-size
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-company-size"
                                                emptyText="Intelligent Content Company Size"
                                                fieldLabel="IC Company Size"
                                                multiple="{Boolean}true"
                                                name="./ic-company-size">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-company-size>
                                        </items>
                                    </metadata>
                                </items>
                            </column>
                        </items>
                    </metadata>
                    <CTAs
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Related CTAs"
                        sling:orderBefore="advanced"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <secondary
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Sticky header"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter the text here that will be the CTA Link Text for the Second CTA in the Related CTAs Component"
                                                fieldLabel="Secondary CTA Link Text"
                                                name="./secondaryCtaText"
                                                renderReadOnly="{Boolean}false">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="secondaryCtaText"/>
                                            </text>
                                            <linkPath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Use the path picker to select a page within the site or enter a URL beginning with http:"
                                                fieldLabel="Secondary CTA URL"
                                                name="./secondaryCtaHref"
                                                rootPath="/content/bmc"/>
                                        </items>
                                    </secondary>
                                    <productsSolutionsLanding
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="ProductsSolutionsLanding"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter the text here that will be the CTA Link Text for the Second CTA in the Related CTAs Component"
                                                fieldLabel="Secondary CTA Link Text for ProductsSolutionsLanding"
                                                name="./secondaryCtaTextProducts"
                                                renderReadOnly="{Boolean}false">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="secondaryCtaTextProducts"/>
                                            </text>
                                            <linkPath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Use the path picker to select a page within the site or enter a URL beginning with http:"
                                                fieldLabel="Secondary CTA URL for ProductsSolutionsLanding"
                                                name="./secondaryCtaHrefProducts"
                                                rootPath="/content/bmc"/>
                                        </items>
                                    </productsSolutionsLanding>
                                    <customerStoryPage
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Customer Story Pages"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter the text here that will be the CTA Link Text for the Second CTA in the Related CTAs Component"
                                                fieldLabel="Secondary CTA Link Text for Customer Story pages"
                                                name="./secondaryCtaTextCustomer"
                                                renderReadOnly="{Boolean}false">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="secondaryCtaTextProducts"/>
                                            </text>
                                            <linkPath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Use the path picker to select a page within the site or enter a URL beginning with http:"
                                                fieldLabel="Secondary CTA URL for Customer Story page"
                                                name="./secondaryCtaHrefCustomer"
                                                rootPath="/content/bmc"/>
                                        </items>
                                    </customerStoryPage>
                                </items>
                            </column>
                        </items>
                    </CTAs>
                    <advanced
                        jcr:primaryType="nt:unstructured"
                        sling:orderBefore="thumbnail"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/mnt/override/apps/bmc/components/structure/page/tabs/advanced"/>
                    <resourceCenter
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Resource Center"
                        sling:orderBefore="thumbnail"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <resourceCenter
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Resource Center"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <rc-inclusion
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Should be &quot;Yes&quot; if this asset/page needs to be included in Resource center."
                                                fieldLabel="Resource center Inclusion"
                                                name="./rc-inclusion">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                        jcr:primaryType="nt:unstructured"
                                                        selected="{Boolean}true"
                                                        text="NO"
                                                        value="{Boolean}false"/>
                                                    <item2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="YES"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </rc-inclusion>
                                            <asset-inclusion
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Should be &quot;Yes&quot;/&quot;No&quot; if this asset/page  needs to be gated/non-gated respectively."
                                                fieldLabel="Asset Gated/Un-gated"
                                                name="./asset-inclusion">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".gate-form-fieldset-showhide-target"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                        jcr:primaryType="nt:unstructured"
                                                        selected="{Boolean}true"
                                                        text="Not gated"
                                                        value="{Boolean}false"/>
                                                    <item2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Gated"
                                                        value="{Boolean}true"/>
                                                </items>
                                            </asset-inclusion>
                                            <rc-form-path
                                                granite:class="hide gate-form-fieldset-showhide-target foundation-layout-util-vmargin"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                fieldDescription="Enter the form gate path for the asset.">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="true"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading
                                                        granite:class="coral-Heading coral-Heading--4"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}4"
                                                        text="Enter Form Path:"/>
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <parentPage
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldDescription="Enter the Gated asset form Pathfield"
                                                                fieldLabel="Gate form path."
                                                                name="./rc-form-path"
                                                                rootPath="/content/bmc"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </rc-form-path>
                                            <headerImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Please pick the DAM asset for the header image."
                                                fieldLabel="Document header image"
                                                name="./headerImage"
                                                rootPath="/content/dam/bmc"/>
                                            <footerLogo
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Please pick the DAM asset for footer logo image."
                                                fieldLabel="Footer logo"
                                                name="./footerLogo"
                                                rootPath="/content/dam/bmc/logos"/>
                                            <rc-inclusionTypeHint
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                ignoreData="{Boolean}true"
                                                name="./rc-inclusion@TypeHint"
                                                value="Boolean"/>
                                            <asset-inclusionTypeHint
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                ignoreData="{Boolean}true"
                                                name="./asset-inclusion@TypeHint"
                                                value="Boolean"/>
                                        </items>
                                    </resourceCenter>
                                </items>
                            </column>
                        </items>
                    </resourceCenter>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
