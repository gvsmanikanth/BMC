<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Page"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[cq.common.wcm,core.wcm.page.properties,cq.wcm.msm.properties]"
          mode="edit">
    <content
            granite:class="cq-dialog-content-page"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    granite:class="cq-siteadmin-admin-properties-tabs"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    size="L">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Title and Tags"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <showbreadcrumbs
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    name="./showBreadcrumbs"
                                                    renderReadOnly="{Boolean}false"
                                                    text="Show Breadcrumbs"
                                                    value="true">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="showBreadcrumbs"/>
                                            </showbreadcrumbs>
                                        </items>
                                    </title>
                                    <moretitles jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <browserTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    name="./browserTitle"
                                                    fieldLabel="Browser Title"
                                                    renderReadOnly="{Boolean}true"
                                                    sling:orderBefore="pagetitle">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="browserTitle"/>
                                            </browserTitle>
                                            <description
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    name="./jcr:description"
                                                    fieldLabel="Description (Reusable)"
                                                    renderReadOnly="{Boolean}true">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="jcr:description"/>
                                            </description>
                                            <short_description
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    name="./short_description"
                                                    fieldLabel="Short Description"
                                                    fieldDescription="Used in Related CTAs"
                                                    renderReadOnly="{Boolean}true">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="short_description"/>
                                            </short_description>
                                            <meta_description
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    name="./meta_description"
                                                    fieldLabel="Meta Description"
                                                    fieldDescription="Meta Description content is used when the page comes up in search engines."
                                                    renderReadOnly="{Boolean}true">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="meta_description"/>
                                            </meta_description>
                                        </items>
                                    </moretitles>
                                </items>
                            </column>
                        </items>
                    </basic>
                    <advanced jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <column jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <section1
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Settings"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <redirect
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldLabel="Redirect"
                                                    name="./redirectTarget"
                                                    renderReadOnly="{Boolean}true"
                                                    rootPath="/content/bmc">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="redirectTarget"/>
                                            </redirect>
                                        </items>
                                    </section1>
                                    <errors
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Errors"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                             <errorpages
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Error pages for this content tree"
                                                    fieldLabel="Error Pages"
                                                    name="./errorPages"
                                                    rootPath="/content/bmc"/>
                                        </items>
                                    </errors>
                                    <homepage
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Home Page"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                             <errorpages
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="This page is a Home Page"
                                                    text="Home Page"
                                                    renderReadOnly="{Boolean}false"
                                                    name="./homePage"
                                                    value="{Boolean}true"/>
                                        </items>
                                    </homepage>
                                </items>
                            </column>
                        </items>
                    </advanced>
                    <metadata
                            jcr:primaryType="nt:unstructured"
                            cq:showOnCreate="false"
                            jcr:title="Metadata"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            sling:orderBefore="resources">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <metadata
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Metadata"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <product-interest
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    name="./product_interest"
                                                    fieldDescription="Select Related Products"
                                                    fieldLabel="Product"
                                                    useNameAsValue="true"
                                                    emptyText="Select"
                                                    textProperty="textEmpty"
                                                    valueProperty="valueEmpty"
                                                    multiple="{Boolean}true"
                                                    dataPath="/content/bmc/resources/product-interests">
                                                <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="product_interest"/>
                                            </product-interest>
                                            <productLine1
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldDescription="Select Related Product Lines"
                                                    fieldLabel="Product Line"
                                                    emptyText="Select"
                                                    name="./product_line"
                                                    multiple="{Boolean}true"
                                                    dataPath="/content/bmc/resources/product-lines">
                                                <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="/apps/bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="product_line"/>
                                            </productLine1>
                                            <topics
                                                    jcr:primaryType="nt:unstructured"
                                                    fieldLabel="Topics"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    emptyText="Select topic to add"
                                                    multiple="true"
                                                    metadataName="topic"
                                                    name="./topics">
                                                <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="topics"/>
                                            </topics>
                                        </items>
                                    </metadata>
                                </items>
                            </column>
                        </items>
                    </metadata>
                    <resources
                            jcr:primaryType="nt:unstructured"
                            cq:showOnCreate="false"
                            jcr:title="Resources"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            sling:orderBefore="advanced">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <resources
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Resource Hub"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <hub-inclusion
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    fieldDescription="Include in Resource Hub?"
                                                    fieldLabel="Resource Hub Inclusion"
                                                    name="./hub-inclusion">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="No (not for hub)"
                                                            value="no"/>
                                                    <item2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Yes (not gated)"
                                                            value="yes"/>
                                                    <item3
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Gated (map from form)"
                                                            value="gated"/>
                                                    <item4
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Gate (map to asset)"
                                                            value="gate"/>
                                                </items>
                                            </hub-inclusion>
                                            <hub-weighting
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    fieldDescription="Choose a weighting for this content"
                                                    fieldLabel="Content Weighting"
                                                    name="./hub-weighting">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="5"
                                                            value="5"/>
                                                    <item2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="4"
                                                            value="4"/>
                                                    <item3
                                                            jcr:primaryType="nt:unstructured"
                                                            text="3"
                                                            value="3"/>
                                                    <item4
                                                            jcr:primaryType="nt:unstructured"
                                                            text="2"
                                                            value="2"/>
                                                    <item5
                                                            jcr:primaryType="nt:unstructured"
                                                            text="1"
                                                            value="1"/>
                                                </items>
                                            </hub-weighting>
                                            <hub-topics
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    fieldDescription="Choose one or more Resource Hub topics for this content"
                                                    fieldLabel="Resource Hub Topic(s)"
                                                    multiple="{Boolean}true"
                                                    name="./hub-topics">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="AI and Machine Learning"
                                                            value="AIMachineLearning"/>
                                                    <item2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Big Data"
                                                            value="BigData"/>
                                                    <item3
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Business and IT Automation"
                                                            value="BusinessITAutomation"/>
                                                    <item4
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Cost Reduction and IT Optimization"
                                                            value="CostReductionITOptimization"/>
                                                    <item5
                                                            jcr:primaryType="nt:unstructured"
                                                            text="DevOps"
                                                            value="DevOps"/>
                                                    <item6
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Digital Workplace"
                                                            value="DigitalWorkplace"/>
                                                    <item7
                                                            jcr:primaryType="nt:unstructured"
                                                            text="IT Operations Management"
                                                            value="ITOperationsManagement"/>
                                                    <item8
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Mainframe"
                                                            value="Mainframe"/>
                                                    <item9
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Multi-Cloud"
                                                            value="Multi-Cloud"/>
                                                    <item10
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Security and Compliance"
                                                            value="SecurityCompliance"/>
                                                    <item11
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Service Management"
                                                            value="ServiceManagement"/>
                                                </items>
                                            </hub-topics>
                                            <hub-buyer-stage
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    fieldDescription="Choose a Buyer Stage for this content"
                                                    fieldLabel="Buyer Stage"
                                                    multiple="{Boolean}true"
                                                    name="./hub-buyer-stage">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Discover"
                                                            value="discover"/>
                                                    <item2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Explore"
                                                            value="explore"/>
                                                    <item3
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Engage"
                                                            value="engage"/>
                                                    <item4
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Buy"
                                                            value="buy"/>
                                                </items>
                                            </hub-buyer-stage>
                                            <hub-industry
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    fieldDescription="Choose zero or more industries for this content"
                                                    fieldLabel="Target Industry"
                                                    multiple="{Boolean}true"
                                                    name="./hub-industry">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Telecommunications and Media"
                                                            value="Telecommunications and Media"/>
                                                    <item2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="etc..."
                                                            value="etc"/>
                                                </items>
                                            </hub-industry>
                                            <hub-company-size
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    fieldDescription="Choose a target company size for this content"
                                                    fieldLabel="Company Size"
                                                    name="./hub-company-size">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="5000+"
                                                            value="5000"/>
                                                    <item2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="1000-4999"
                                                            value="1000-4999"/>
                                                    <item3
                                                            jcr:primaryType="nt:unstructured"
                                                            text="1-999"
                                                            value="1-999"/>
                                                </items>
                                            </hub-company-size>
                                        </items>
                                    </resources>
                                </items>
                            </column>
                        </items>
                    </resources>

                    <CTAs
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Related CTAs"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            sling:orderBefore="advanced">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <secondary
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Related CTAs - Secondary CTA"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    renderReadOnly="{Boolean}false"
                                                    fieldDescription="Enter the text here that will be the CTA Link Text for the Second CTA in the Related CTAs Component"
                                                    fieldLabel="Secondary CTA Link Text"
                                                    name="./secondaryCtaText">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        allowBulkEdit="{Boolean}true"
                                                        cq-msm-lockable="secondaryCtaText"/>
                                            </text>
                                            <linkPath jcr:primaryType="nt:unstructured"
                                                      sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                      fieldDescription="Use the path picker to select a page within the site or enter a URL beginning with http:"
                                                      rootPath="/content/bmc"
                                                      fieldLabel="Secondary CTA URL"
                                                      name="./secondaryCtaHref" />
                                        </items>
                                    </secondary>
                                </items>
                            </column>
                        </items>
                    </CTAs>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
