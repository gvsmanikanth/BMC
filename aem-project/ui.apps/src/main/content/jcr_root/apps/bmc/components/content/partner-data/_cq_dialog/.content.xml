<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Partner Data"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[core.wcm.components.image.v1.editor]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <image jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <column jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <decorative
                                    jcr:primaryType="nt:unstructured"
                                    sling:hideResource="{Boolean}true"/>
                            <alt
                                    jcr:primaryType="nt:unstructured"
                                    sling:hideResource="{Boolean}true"/>
                            <linkURL
                                    jcr:primaryType="nt:unstructured"
                                    sling:hideResource="{Boolean}true"/>
                            <caption
                                    jcr:primaryType="nt:unstructured"
                                    sling:hideResource="{Boolean}true"/>
                            <displayCaptionPopup
                                    jcr:primaryType="nt:unstructured"
                                    sling:hideResource="{Boolean}true"/>
                            <name
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    autofocus="{Boolean}true"
                                    fieldDescription="Enter the name of the partner company"
                                    fieldLabel="Company Name"
                                    name="./name"
                                    sling:orderBefore="file"
                                    required="{Boolean}true"/>
                            <companyURL
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    emptyText="https://connectivedx.com"
                                    fieldDescription="Enter the URL partner company's website, including protocol"
                                    fieldLabel="Company URL"
                                    name="./companyURL"/>
                            <companyExternalURL
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    emptyText="https://marketplace.bmc.com/companies/connectivedx"
                                    fieldDescription="I'm not actually sure what this is"
                                    fieldLabel="Company External URL"
                                    name="./companyExternalURL"/>
                            <shortDescription
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                    fieldDescription="Enter a short description—one sentence is good—of the partner company"
                                    fieldLabel="Short Description"
                                    name="./shortDescription"
                                    required="{Boolean}true"/>
                            <longDescription
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                    fieldDescription="Enter a more detailed description of the partner company"
                                    fieldLabel="Long Description"
                                    name="./longDescription"
                                    required="{Boolean}true"
                                    useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <format
                                            jcr:primaryType="nt:unstructured"
                                            features="*"/>
                                    <misctools
                                            jcr:primaryType="nt:unstructured"
                                            features="*"/>
                                    <spellcheck
                                            jcr:primaryType="nt:unstructured"
                                            features="*"/>
                                </rtePlugins>
                            </longDescription>
                            <isEnabled
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    fieldDescription="Uncheck to hide this company in the Strategic Partners list"
                                    value="true"
                                    uncheckedValue="false"
                                    text="Enabled"
                                    checked="{Boolean}true"
                                    name="./isEnabled"
                                    />
                        </items>
                    </column>
                </items>
            </image>
        </items>
    </content>
</jcr:root>
