<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="FeaturedAsset"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.image.v1.editor]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <text
                jcr:primaryType="nt:unstructured"
                jcr:title="Text"
                sling:orderBefore="image"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter the heading"
                                fieldLabel="Heading"
                                name="./heading"/>
                            <subhead
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter the heading"
                                fieldLabel="Subheading"
                                name="./subheading"/>
                            <bgcolor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Choose the color"
                                fieldLabel="Background color"
                                name="./bg_color">
                                <items jcr:primaryType="nt:unstructured">
                                    <item1
                                        jcr:primaryType="nt:unstructured"
                                        text="Grey"
                                        value="grey"/>
                                    <item2
                                        jcr:primaryType="nt:unstructured"
                                        text="White"
                                        value="white"/>
                                </items>
                            </bgcolor>
                            <cta-text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter the CTA text"
                                fieldLabel="CTA Link Text"
                                name="./cta_text"/>
                            <cta-url
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Enter the CTA URL"
                                fieldLabel="CTA URL"
                                name="./cta_url"/>
                            <image_x0020_Location
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Select the Image Placement"
                                fieldLabel="Image Location"
                                name="./image_location">
                                <items jcr:primaryType="nt:unstructured">
                                    <item1
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="left"/>
                                    <item2
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="right"/>
                                    <item3
                                        jcr:primaryType="nt:unstructured"
                                        text="Above"
                                        value="above"/>
                                    <item4
                                        jcr:primaryType="nt:unstructured"
                                        text="Below"
                                        value="below"/>
                                </items>
                            </image_x0020_Location>
                            <isYoutubeVideo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="When checked the video displays in modal"
                                name="./isYoutubeVideo"
                                text="Is Youtube video"
                                value="{Boolean}true"/>
                            <isTwistageVideo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="When checked the video displays in modal"
                                name="./isTwistageVideo"
                                text="Is Twistage video"
                                value="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </text>
            <image jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <column jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <decorative
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <alt
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}false"/>
                            <linkURL
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <caption
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                            <displayCaptionPopup
                                jcr:primaryType="nt:unstructured"
                                sling:hideResource="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </image>
        </items>
    </content>
</jcr:root>
