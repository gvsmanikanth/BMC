<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="ExternalLinkDocument"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.image.v1.editor,external.document.dropdown]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <advanced
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/mnt/override/apps/bmc/components/structure/external-link-document/tabs/advanced"/>
                    <thumbnail jcr:primaryType="nt:unstructured"/>
                    <socialmedia
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <cloudservices jcr:primaryType="nt:unstructured"/>
                    <personalization
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <permissions jcr:primaryType="nt:unstructured"/>
                    <blueprint jcr:primaryType="nt:unstructured"/>
                    <livecopy jcr:primaryType="nt:unstructured"/>
                    <metadata
                        cq:showOnCreate="false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Metadata"
                        sling:orderBefore="advanced"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <metadata
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Metadata"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <product-interest
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/product-interests"
                                                emptyText="Select"
                                                fieldDescription="Select Related Products"
                                                fieldLabel="Product"
                                                multiple="{Boolean}true"
                                                name="./product_interest"
                                                textProperty="textEmpty"
                                                useNameAsValue="true"
                                                valueProperty="valueEmpty">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="product_interest"/>
                                            </product-interest>
                                            <productLine1
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                dataPath="/content/bmc/resources/product-lines"
                                                emptyText="Select"
                                                fieldDescription="Select Related Product Lines"
                                                fieldLabel="Product Line"
                                                multiple="{Boolean}true"
                                                name="./product_line">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/apps/bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="product_line"/>
                                            </productLine1>
                                            <topics
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyText="Select topic to add"
                                                fieldDescription="Used for filtering All Products landing"
                                                fieldLabel="Topics"
                                                metadataName="topic"
                                                multiple="true"
                                                name="./topics">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"
                                                    cq-msm-lockable="topics"/>
                                            </topics>
                                            <ic-app-inclusion
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyText="Intelligent Content App Inclusion"
                                                fieldLabel="IC App Inclusion"
                                                name="./ic-app-inclusion">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="No"
                                                        value="no"/>
                                                    <item2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Yes (not gated)"
                                                        value="yes"/>
                                                    <item3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Gate"
                                                        value="gate"/>
                                                    <item4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Gated"
                                                        value="gated"/>
                                                </items>
                                            </ic-app-inclusion>
                                            <ic-content-type
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-types"
                                                emptyText="Intelligent Content Type"
                                                fieldLabel="IC Type"
                                                multiple="{Boolean}true"
                                                name="./ic-content-type">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-content-type>
                                            <ic-weighting
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Used to position content in intelligent content results list. 1 is most important. 5 is least important."
                                                fieldLabel="IC Weighting"
                                                name="./ic-weighting">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="5 (least important)"
                                                        value="5"/>
                                                    <item2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="4"
                                                        value="4"/>
                                                    <item3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="3"
                                                        value="3"/>
                                                    <item4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="2"
                                                        value="2"/>
                                                    <item5
                                                        jcr:primaryType="nt:unstructured"
                                                        text="1 (most important)"
                                                        value="1"/>
                                                </items>
                                            </ic-weighting>
                                            <ic-topics
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-topics"
                                                emptyText="Intelligent Content Topic"
                                                fieldDescription="Used for filtering intelligent content"
                                                fieldLabel="IC Topic"
                                                multiple="{Boolean}true"
                                                name="./ic-topics">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-topics>
                                            <ic-buyer-stage
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-buyer-stage"
                                                emptyText="Intelligent Content Buyer Stage"
                                                fieldLabel="IC Buyer Stage"
                                                multiple="{Boolean}true"
                                                name="./ic-buyer-stage">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-buyer-stage>
                                            <ic-target-persona
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-target-persona"
                                                emptyText="Intelligent Content Target Persona"
                                                fieldLabel="IC Target Persona"
                                                multiple="{Boolean}true"
                                                name="./ic-target-persona">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-target-persona>
                                            <ic-source-publish-date
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                displayedFormat="MM-YYYY"
                                                fieldDescription="Used to specify when the content was created, not when it was published in AEM"
                                                fieldLabel="IC Source Publish Date (MM-YYYY)"
                                                name="./ic-source-publish-date"
                                                type="datetime"
                                                typeHint="IC Source Publish Date (MM-YYYY)"/>
                                            <ic-target-industry
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-target-industry"
                                                emptyText="Intelligent Content Target Industry"
                                                fieldLabel="IC Target Industry"
                                                multiple="{Boolean}true"
                                                name="./ic-target-industry">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-target-industry>
                                            <ic-company-size
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                dataPath="/content/bmc/resources/intelligent-content-company-size"
                                                emptyText="Intelligent Content Company Size"
                                                fieldLabel="IC Company Size"
                                                multiple="{Boolean}true"
                                                name="./ic-company-size">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    allowBulkEdit="{Boolean}true"/>
                                            </ic-company-size>
                                            <listFrom
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Document Link Type:"
                                                name="./documentType">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <children
                                                        granite:hide="${cqDesign.disableChildren}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="External Document link"
                                                        value="children"/>
                                                    <search
                                                        granite:hide="${cqDesign.disableSearch}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="DAM Asset Link"
                                                        value="search"/>
                                                </items>
                                            </listFrom>
                                            <setSearch
                                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="search"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading
                                                        granite:class="coral-Heading coral-Heading--4"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}4"
                                                        text="Document DAM Asset Picker."/>
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <queryContentPath
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldDescription="Please pick the DAM link to the document asset."
                                                                fieldLabel="Document Asset."
                                                                name="./linkAbstractorDAMAsset"
                                                                rootPath="/content/dam/bmc"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </setSearch>
                                            <setChildren
                                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="children"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading
                                                        granite:class="coral-Heading coral-Heading--4"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}4"
                                                        text="External Document URL:"/>
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <parentPage
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Enter the external document link."
                                                                fieldLabel="Document link."
                                                                name="./linkAbstractorExternalAsset"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </setChildren>
                                            <linkAbstractor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                defaultValue="external-document"
                                                name="./linkAbstractor"
                                                value="external-document"/>
                                            <footerLogo
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Please pick the DAM asset for footer logo image."
                                                fieldLabel="Footer logo"
                                                name="./footerLogo"
                                                rootPath="/content/dam/bmc/logos"/>
                                            <headerImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Please pick the DAM asset for the header image."
                                                fieldLabel="Document header image"
                                                name="./headerImage"
                                                rootPath="/content/dam/bmc"/>
                                            <documentDisplayType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Choose the Document Container display type."
                                                fieldLabel="Document Container display type."
                                                name="./displayType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Old view (Jump page)"
                                                        value="default"/>
                                                    <item2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Inline (New Layout)"
                                                        value="inline"/>
                                                </items>
                                            </documentDisplayType>                                          
                                        </items>
                                    </metadata>
                                </items>
                            </column>
                        </items>
                    </metadata>
                    <basic
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/mnt/override/apps/bmc/components/structure/external-link-document/tabs/basic"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
