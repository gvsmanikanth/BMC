<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="RelatedCTAsList"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <columns
                    jcr:primaryType="nt:unstructured"
                    jcr:title="RelatedCTAsList"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <headingTypeId
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    class="cq-dialog-dropdown-showhide"
                                    cq-dialog-dropdown-showhide-target=".custom-heading"
                                    fieldLabel="Heading"
                                    name="./headingTypeId">
                                <items jcr:primaryType="nt:unstructured">
                                    <option1
                                            jcr:primaryType="nt:unstructured"
                                            text="Featured offerings" value="1" />
                                    <option2
                                            jcr:primaryType="nt:unstructured"
                                            text="Custom" value="0" />
                                </items>
                            </headingTypeId>
                            <headingTypeIdHint
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                    name="./headingTypeId@TypeHint"
                                    value="Integer"/>
                            <customerHeadingContainer
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container"
                                    class="hide custom-heading"
                                    showhidetargetvalue="0">
                                <items jcr:primaryType="nt:unstructured">
                                    <customHeadingText
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                            fieldDescription="Enter a custom heading here"
                                            name="./customHeadingText"/>
                                </items>
                            </customerHeadingContainer>
                            <linkItems jcr:primaryType="nt:unstructured"
                                       sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                       fieldLabel="Items">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Please select the page"
                                        fieldLabel="Page"
                                        name="./internalPagePaths"
                                        rootPath="/content/bmc"
                                        required="{Boolean}true"/>
                            </linkItems>
                            <flexiLinkItems
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Flexi Link Items">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                    name="./flexiLinkItems">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <overrrideTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Use Title case."
                                                    fieldLabel="Override Title (optional)"
                                                    name="./overrideTitle"/>
                                                <overrideDescription
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldDescription="Use sentence case."
                                                    fieldLabel="overrideDescription (Optional)"
                                                    name="./overrideDescription"/>
                                                <pagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Please select the  page or add the external URL"
                                                    fieldLabel="Page path"
                                                    name="./pagePath"
                                                    required="{Boolean}true"
                                                    rootPath="/content/bmc"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </flexiLinkItems>
                        </items>
                    </column>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>