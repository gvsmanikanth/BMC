<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="RelatedCTAsList"
          sling:resourceSuperType="/apps/bmc/components/content/related-CTAs/related-CTAs-landing/cq:dialog">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <columns jcr:primaryType="nt:unstructured" jcr:title="RelatedCTAsList">
                <items jcr:primaryType="nt:unstructured">
                    <column jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <headingTypeId
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    sling:orderBefore="linkItems"
                                    class="cq-dialog-dropdown-showhide"
                                    cq-dialog-dropdown-showhide-target=".custom-heading"
                                    fieldLabel="Heading"
                                    name="./headingTypeId">
                                <items jcr:primaryType="nt:unstructured">
                                    <option1
                                            jcr:primaryType="nt:unstructured"
                                            text="Featured offerings" value="1" />
                                    <option2
                                            jcr:primaryType="nt:unstructured"
                                            text="Custom" value="0" />
                                </items>
                            </headingTypeId>
                            <headingTypeIdHint
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                    name="./headingTypeId@TypeHint"
                                    value="Integer"/>
                            <customerHeadingContainer
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container"
                                    sling:orderBefore="linkItems"
                                    class="hide custom-heading"
                                    showhidetargetvalue="0">
                                <items jcr:primaryType="nt:unstructured">
                                    <customHeadingText
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                            fieldDescription="Enter a custom heading here"
                                            name="./customHeadingText"/>
                                </items>
                            </customerHeadingContainer>
                        </items>
                    </column>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>