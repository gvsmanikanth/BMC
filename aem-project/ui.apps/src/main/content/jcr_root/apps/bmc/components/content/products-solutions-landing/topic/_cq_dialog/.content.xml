<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Topic"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <columns
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Topic Data"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <topic
                                    jcr:primaryType="nt:unstructured"
                                    fieldLabel="Topic"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    emptyText=""
                                    emptyOption="true"
                                    multiple="false"
                                    metadataName="topic"
                                    name="./topic"
                                    required="{Boolean}true">
                                <datasource
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="bmc/components/forms/datasource/selectoptions"/>
                            </topic>

                            <topic-icon
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Please select the image to use for the Topic Filter icon"
                                    fieldLabel="Topic Filter Icon"
                                    name="./topicFilterIcon"
                                    rootPath="/content/dam"
                                    required="{Boolean}true"/>

                            <product-shot
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Please select the image to use for the Product Shot"
                                    fieldLabel="Product Shot"
                                    name="./productShot"
                                    rootPath="/content/dam"
                                    required="{Boolean}true"/>

                            <explore-link
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Please select the page to use for the explore link"
                                    fieldLabel="Explore Link"
                                    name="./exploreUrl"
                                    rootPath="/content/bmc"
                                    required="{Boolean}true"/>

                            <featured-products jcr:primaryType="nt:unstructured"
                                       sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                       composite="{Boolean}true"
                                       fieldLabel="Featured Products">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                        name="./featuredProducts">
                                    <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                            method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <product
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Please select the product page"
                                                        fieldLabel="Product"
                                                        name="./internalPagePath"
                                                        rootPath="/content/bmc"
                                                        required="{Boolean}true"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </featured-products>
                        </items>
                    </column>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>
