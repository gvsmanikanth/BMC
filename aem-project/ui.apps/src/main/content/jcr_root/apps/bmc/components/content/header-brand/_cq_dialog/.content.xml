<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="HeaderBrand"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[core.wcm.components.image.v1.editor]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <text
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Text"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                    sling:orderBefore="image">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <breadcrumbBooleanCheckbox
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    text="Show Breadcrumb"
                                    name="./show_breadcrumb"
                                    value="true"/>
                            <showBreadcrumbType
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                    name="./show_breadcrumb@TypeHint"
                                    value="Boolean"/>
                            <heading
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter the heading"
                                    fieldLabel="Heading"
                                    name="./heading"/>
                            <subhead
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter the heading"
                                    fieldLabel="Subheading"
                                    name="./subheading"/>
                            <cta-mode
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldDescription="Select the CTA Display Mode"
                                    fieldLabel="CTA Mode"
                                    name="./cta_mode">
                                <items jcr:primaryType="nt:unstructured">
                                    <item1 jcr:primaryType="nt:unstructured" text="Button" value="button"/>
                                    <item2 jcr:primaryType="nt:unstructured" text="Text" value="text"/>
                                </items>
                            </cta-mode>
                            <cta-link
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter the CTA text"
                                    fieldLabel="CTA Link Text"
                                    name="./cta_link"/>
                            <cta-url
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Enter the CTA URL"
                                    fieldLabel="CTA URL"
                                    name="./cta_url"/>
                            <videoBooleanCheckbox
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    text="CTA Link is Video"
                                    name="./cta_is_video"
                                    value="true"/>
                            <videoBooleanCheckboxType
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                    name="./cta_is_video@TypeHint"
                                    value="Boolean"/>
                        </items>
                    </column>
                </items>
            </text>
            <image jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <column jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <decorative jcr:primaryType="nt:unstructured"
                                        sling:hideResource="{Boolean}true"/>
                            <alt jcr:primaryType="nt:unstructured"
                                 sling:hideResource="{Boolean}true"/>
                            <linkURL jcr:primaryType="nt:unstructured"
                                     sling:hideResource="{Boolean}true"/>
                            <caption jcr:primaryType="nt:unstructured"
                                     sling:hideResource="{Boolean}true"/>
                            <displayCaptionPopup jcr:primaryType="nt:unstructured"
                                                 sling:hideResource="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </image>
        </items>
    </content>
</jcr:root>
