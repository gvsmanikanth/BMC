<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Resource Section"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <columns
                jcr:primaryType="nt:unstructured"
                jcr:title="Resource Section"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Use Title case."
                                fieldLabel="Title"
                                name="./rcTitle"/>
                            <subTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Use sentence case."
                                fieldLabel="Subtitle (optional)"
                                name="./rcSubTitle"/>
                            <cards
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Resource Cards">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                    name="./resourceCards">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <imagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Please select the image"
                                                    fieldLabel="Resource Image Path"
                                                    name="./rcCardsImagePath"
                                                    rootPath="/content/dam/bmc"/>
                                                <overrrideTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Use Title case."
                                                    fieldLabel="Override Title (optional)"
                                                    name="./rcOverrideTitle"/>
                                                <overrideDescription
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldDescription="Use sentence case."
                                                    fieldLabel="overrideDescription (Optional)"
                                                    name="./rcOverrideDescription"/>
                                                <pagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Please select the resource page"
                                                    fieldLabel="Resource page path"
                                                    name="./pagePath"
                                                    required="{Boolean}true"
                                                    rootPath="/content/bmc"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </cards>
                            <numberOfCards
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Number of cards per row. If none selected defaults to 4"
                                multiple="{Boolean}false"
                                name="./numberOfCards">
                                <items jcr:primaryType="nt:unstructured">
                                    <noneselected
                                        jcr:primaryType="nt:unstructured"
                                        text="none selected"
                                        value=""/>
                                    <_x0038_
                                        jcr:primaryType="nt:unstructured"
                                        text="8"
                                        value="8"/>
                                    <_x0034_
                                        jcr:primaryType="nt:unstructured"
                                        text="4"
                                        value="4"/>
                                </items>
                            </numberOfCards>
                            <cta
                                jcr:primaryType="nt:unstructured"
                                jcr:title="CTA Button"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <ctaText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Enter a name that will appear on the CTA"
                                                fieldLabel="CTA Label"
                                                name="./ctaText"/>
                                            <ctaPath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Use the path picker to select a page within the site"
                                                fieldLabel="CTA Path"
                                                name="./ctaPath"
                                                rootPath="/content"/>
                                             <ctaClass
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldDescription="Add custom Class name here"
                                                fieldLabel="CSS Class"
                                                name="./cssClass"
                                                rootPath="/content"/> 
                                        </items>
                                    </column>
                                </items>
                            </cta>
                        </items>
                    </column>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>
