<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="CTAButton"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <html
                jcr:primaryType="nt:unstructured"
                jcr:title="Header Text"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">

                            <buttonText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    fieldLabel="Common text values"
                                    multiple="{Boolean}false"
                                    name="./buttonText">

                                <items jcr:primaryType="nt:unstructured">
                                    <none jcr:primaryType="nt:unstructured" text="--select--" value="Specify text" />
                                    <sales jcr:primaryType="nt:unstructured" text="Contact Sales" value="Contact Sales"/>
                                    <expert jcr:primaryType="nt:unstructured" text="Consult a BMC expert" value="Consult a BMC expert"/>
                                    <search jcr:primaryType="nt:unstructured" text="Search for courses" value="Search for courses"/>
                                    <education jcr:primaryType="nt:unstructured" text="Contact an Education Advisor" value="Contact an Education Advisor"/>
                                    <download jcr:primaryType="nt:unstructured" text="Download PDF" value="Download PDF"/>
                                    <trial jcr:primaryType="nt:unstructured" text="Start a free trial" value="Start a free trial"/>
                                    <learn jcr:primaryType="nt:unstructured" text="Learn more" value="Learn more"/>
                                </items>
                            </buttonText>

                            <customButtonText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="You may add your own custom text for the button here."
                                    fieldLabel="Optional: custom text"
                                    name="./customButtonText"/>


                            <buttonURL
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Select a page using the path tool, or enter an external HTTP link"
                                    fieldLabel="Button URL"
                                    name="./buttonURL"/>

                            <buttonColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    fieldLabel="Select button color"
                                    multiple="{Boolean}false"
                                    name="./buttonColor">

                                <items jcr:primaryType="nt:unstructured">
                                    <blue jcr:primaryType="nt:unstructured" text="Blue (primary)" value="btn"/>
                                    <green jcr:primaryType="nt:unstructured" text="Green (secondary)" value="btn btn-secondary"/>
                                    <orange jcr:primaryType="nt:unstructured" text="Orange (corporate)" value="btn btn-corporate"/>
                                </items>
                            </buttonColor>


                            <learnMore
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    fieldDescription="When checked, the button text will be appended with '›'."
                                    name="./learnMore"
                                    text="Append '›' to the button text?"
                                    value="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </html>
        </items>
    </content>
</jcr:root>
