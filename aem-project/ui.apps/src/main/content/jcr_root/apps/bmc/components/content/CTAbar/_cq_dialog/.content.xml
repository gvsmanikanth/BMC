<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="CTAbar"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <text
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Text"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                    sling:orderBefore="image">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">


                            <headerText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="(Optional) Enter the heading text"
                                    fieldLabel="(Optional) Enter the heading text"
                                    name="./headerText"/>

                            <bgcolor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    fieldLabel="Background color"
                                    multiple="{Boolean}false"
                                    name="./bgcolor">

                                <items jcr:primaryType="nt:unstructured">
                                    <white jcr:primaryType="nt:unstructured" text="White" value="bg-white" />
                                    <lightgrey jcr:primaryType="nt:unstructured" text="Light Grey" value="bg-seashell" />
                                    <darkgrey jcr:primaryType="nt:unstructured" text="Dark Grey" value="bg-ship-gray" />
                                    <mediumgrey jcr:primaryType="nt:unstructured" text="Medium Grey" value="bg-corduroy" />
                                </items>
                            </bgcolor>

                            <primaryCTAheader
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="(Optional) Enter the heading text"
                                    fieldLabel="(Optional) Heading over green button"
                                    name="./primaryCTAheader"/>

                            <primaryCTAtext
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="(Optional) Enter the text for the primary CTA"
                                    fieldLabel="(Optional) Primary CTA text"
                                    name="./primaryCTAtext"/>

                            <primaryCTAURL
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="(Optional) Select or enter the URL for the primary CTA"
                                    fieldLabel="(Optional) Primary CTA URL"
                                    name="./primaryCTAURL"/>
                        </items>
                    </column>
                </items>
            </text>
        </items>
    </content>
</jcr:root>
