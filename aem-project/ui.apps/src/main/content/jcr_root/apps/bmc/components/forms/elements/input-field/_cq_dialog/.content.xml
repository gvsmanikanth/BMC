<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Form Text field"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_form_text_v1">
    <content
        granite:class="cmp-form-textfield-editDialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maxmized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <Constraints
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Validation"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <validationType
                                        granite:class="cmp-form-validation-types"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Validation Type"
                                        name="./validation-type"
                                        wrapperClass="cmp-form-textfield-requiredmessage"
                                        sling:orderBefore="constraintMessage">
                                        <items jcr:primaryType="nt:unstructured">
                                            <salutation
                                                jcr:primaryType="nt:unstructured"
                                                text="Salutation"
                                                value="Salutation1"/>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                text="Title"
                                                value="title"/>
                                            <address1
                                                jcr:primaryType="nt:unstructured"
                                                text="Address 1"
                                                value="address1"/>
                                            <address2
                                                jcr:primaryType="nt:unstructured"
                                                text="Address 2"
                                                value="address2"/>
                                            <address3
                                                jcr:primaryType="nt:unstructured"
                                                text="Address 3"
                                                value="address3"/>
                                            <zip
                                                jcr:primaryType="nt:unstructured"
                                                text="Zip Postal"
                                                value="Zip_Postal"/>
                                            <businessphone
                                                jcr:primaryType="nt:unstructured"
                                                text="Business Phone"
                                                value="BusPhone"/>
                                            <firstname
                                                jcr:primaryType="nt:unstructured"
                                                text="First Name"
                                                value="firstname"/>
                                            <lastname
                                                jcr:primaryType="nt:unstructured"
                                                text="Last Name"
                                                value="lastname"/>
                                        </items>
                                    </validationType>                                    
                                </items>
                            </column>
                        </items>
                    </Constraints>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
