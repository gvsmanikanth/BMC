<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Basic"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <linkAbstractorExternalURL
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldDescription="Enter the link URL."
                    fieldLabel="Link URL "
                    name="./linkAbstractorExternalURL"/>
                <linkAbstractorTarget
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldDescription="Enter the link target."
                    fieldLabel="Link Target"
                    name="./linkAbstractorTarget">
                    <items jcr:primaryType="nt:unstructured">
                        <item1
                            jcr:primaryType="nt:unstructured"
                            text="Load in a new window (_blank)"
                            value="new"/>
                        <item3
                            jcr:primaryType="nt:unstructured"
                            text="Load in the same window (_self)"
                            value="self"/>
                    </items>
                </linkAbstractorTarget>
                <linkAbstractor
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                    name="./linkAbstractor"
                    value="external-link"/>
            </items>
        </column>
    </items>
</jcr:root>
