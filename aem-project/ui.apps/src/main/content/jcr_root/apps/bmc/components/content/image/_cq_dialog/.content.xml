<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.image.v1.editor]"
    helpPath="https://www.adobe.com/go/aem_cmp_image_v1">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <image
                jcr:primaryType="nt:unstructured"
                jcr:title="Image"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <file
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Image asset"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./file"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <decorative
                                granite:class="core-image-decorative"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Check if the image should be ignored by assistive technology and therefore does not require an alternative text. This applies to decorative images only."
                                name="./isDecorative"
                                text="Image is decorative"
                                value="{Boolean}true"/>
                            <alt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
                                fieldLabel="Alternative Text"
                                name="./alt"
                                required="{Boolean}true"
                                wrapperClass="core-image-alt"/>
                            <linkURL
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Make the image a link to another resource."
                                fieldLabel="Link"
                                name="./linkURL"
                                rootPath="/content"
                                wrapperClass="core-image-link"/>
                            <caption
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Additional information about the image."
                                fieldLabel="Caption"
                                name="./jcr:title"/>
                            <displayCaptionPopup
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="When checked, the caption won't be displayed below the image, but as a pop-up displayed by some browsers when hovering over the image."
                                name="./displayPopupTitle"
                                text="Show caption as hover text"
                                value="{Boolean}true"/>
                            <showCaptionAsHyperLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                checked="{Boolean}false"
                                fieldDescription="When checked, the caption will be displayed below the image as hyper link."
                                name="./showCaptionAsHyperLink"
                                text="Show caption as hyper link"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"
                                wrapperClass="core-image-hyperlink"/>
                            <imagehorizontalPosition
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Image horizontal position"
                                multiple="{Boolean}false"
                                name="./imagehorizontalPosition">
                                <items jcr:primaryType="nt:unstructured">
                                    <center
                                        jcr:primaryType="nt:unstructured"
                                        text="Center"
                                        value="text-center"/>
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="text-left"/>
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="text-right"/>
                                </items>
                            </imagehorizontalPosition>
                            <imageverticalPosition
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Image vertical position (To be used for tabs)"
                                multiple="{Boolean}false"
                                name="./imageverticalPosition">
                                <items jcr:primaryType="nt:unstructured">
                                    <top
                                        jcr:primaryType="nt:unstructured"
                                        text="Top(default)"/>
                                    <bottom
                                        jcr:primaryType="nt:unstructured"
                                        text="Bottom"
                                        value="align_bottom"/>
                                </items>
                            </imageverticalPosition>
                        </items>
                    </column>
                </items>
            </image>
        </items>
    </content>
</jcr:root>
