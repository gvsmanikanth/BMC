<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="mini carousel"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <html
                jcr:primaryType="nt:unstructured"
                jcr:title="Header Text"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <carouselItem
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                eaem-max-items="5"
                                fieldLabel="Carousel Dialog">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    name="./carouselItem"
                                    wrapperClass="core-wcm-form-options-toggle-set">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <assetType
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Select Asset Type"
                                                    multiple="{Boolean}false"
                                                    name="./assetType"
                                                    wrapperClass="core-wcm-form-options-toggle">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <image
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Image"
                                                            value="image"/>
                                                        <video
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Video"
                                                            value="video"/>
                                                    </items>
                                                </assetType>
                                                <figureCaption
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter Item Caption."
                                                    fieldLabel="Item Caption"
                                                    name="./figureCaption"
                                                    required="{Boolean}true"
                                                    value="Please add a caption here"/>
                                                <thumbnailImagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Select Small Image (900x516)"
                                                    fieldLabel="Select Small Image (900x516)"
                                                    name="./thumbNailPath"
                                                    required="{Boolean}true"
                                                    rootPath="/content/dam/bmc"
                                                    value="/content/dam/bmc/web-services/Placeholder_900x516.png"/>
                                                <mainImagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Select Large Image (1200x690) or Video Path"
                                                    fieldLabel="Select Large Image (1200x690) or Video Path"
                                                    name="./figurePath"
                                                    required="{Boolean}true"
                                                    rootPath="/content"
                                                    value="/content/dam/bmc/web-services/Placeholder_1200x690.png"/>
                                                <addMagnifierIcon
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    checked="{Boolean}false"
                                                    fieldDescription="Check to add the magnifier/Video icon to image."
                                                    name="./addMagnifierIcon"
                                                    text="Add Magnifier/Video Icon."
                                                    uncheckedValue="false"
                                                    value="true"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </carouselItem>
                        </items>
                    </column>
                </items>
            </html>
        </items>
    </content>
</jcr:root>
