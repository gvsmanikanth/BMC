<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="mini carousel"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <html
                jcr:primaryType="nt:unstructured"
                jcr:title="Header Text"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <carouselItem
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                eaem-max-items="5"
                                fieldLabel="Carousel Dialog">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    name="./carouselItem"
                                    wrapperClass="core-wcm-form-options-toggle-set">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <assetType
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Select Asset Type"
                                                    multiple="{Boolean}false"
                                                    name="./assetType"
                                                    wrapperClass="core-wcm-form-options-toggle">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <image
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Image"
                                                            value="image"/>
                                                        <analystReport
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Analyst report"
                                                            value="Analyst report"/>
                                                    </items>
                                                </assetType>
                                                <figureCaption
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter Item Caption."
                                                    fieldLabel="Item Caption"
                                                    name="./figureCaption"
                                                    required="{Boolean}true"/>
                                                <xOffset
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                    disabled="{Boolean}false"
                                                    fieldLabel="Enter the x Offset for the magnifier Icon."
                                                    name="./xOffset"/>
                                                <yOffset
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                    disabled="{Boolean}false"
                                                    fieldLabel="Enter the y Offset for the magnifier Icon."
                                                    name="./yOffset"/>
                                                <showMagnifierIcon
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                    checked="{Boolean}false"
                                                    name="./showMagnifierIcon"
                                                    text="Show Image/Video Play Icon."
                                                    uncheckedValue="false"
                                                    value="true"/>
                                                <iconImagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Select Path"
                                                    fieldLabel="Magnifier or Video Icon Image."
                                                    name="./iconImagePath"
                                                    rootPath="/content/dam"/>
                                                <mainImagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Select Main image."
                                                    fieldLabel="Magnifier or Video Icon Image."
                                                    name="./figurePath"
                                                    rootPath="/content/dam/bmc"/>
                                                <thumbnailImagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Select Thumbnail image Path"
                                                    fieldLabel="Magnifier or Video thumbnail."
                                                    name="./thumbNailPath"
                                                    rootPath="/content/dam/bmc"/>
                                                <assetIndex
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                    defaultValue="0"
                                                    name="./assetIndex"
                                                    value="0"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </carouselItem>
                        </items>
                    </column>
                </items>
            </html>
        </items>
    </content>
</jcr:root>
