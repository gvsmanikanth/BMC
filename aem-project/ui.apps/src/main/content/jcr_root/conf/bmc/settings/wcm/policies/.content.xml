<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:rep="internal"
    jcr:mixinTypes="[rep:AccessControllable]"
    jcr:primaryType="cq:Page">
    <wcm jcr:primaryType="nt:unstructured">
        <foundation jcr:primaryType="nt:unstructured">
            <components jcr:primaryType="nt:unstructured">
                <responsivegrid jcr:primaryType="nt:unstructured">
                    <bmc-default
                        jcr:description="Policy for editable layout containers"
                        jcr:lastModified="{Date}2016-09-16T07:50:27.551+02:00"
                        jcr:lastModifiedBy="admin"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="BMC Default"
                        sling:resourceType="wcm/core/components/policy/policy"
                        components="[group:BMC.content,group:BMC.structure,/libs/wcm/foundation/components/responsivegrid,/libs/cq/experience-fragments/editor/components/experiencefragment,/libs/dam/cfm/components/contentfragment]"
                        policyResourceType="wcm/foundation/components/responsivegrid">
                        <cq:authoring jcr:primaryType="nt:unstructured">
                            <assetToComponentMapping jcr:primaryType="nt:unstructured">
                                <image
                                    jcr:primaryType="nt:unstructured"
                                    assetGroup="media"
                                    assetMimetype="image/*"
                                    droptarget="image"
                                    resourceType="bmc/components/content/image"
                                    type="Images"/>
                                <product
                                    jcr:primaryType="nt:unstructured"
                                    assetGroup="product"
                                    droptarget="product-data-reference"
                                    resourceType="commerce/components/product"
                                    type="Products"/>
                                <flash
                                    jcr:primaryType="nt:unstructured"
                                    assetGroup="media"
                                    assetMimetype="application/x-shockwave-flash"
                                    droptarget="flash"
                                    resourceType="foundation/components/flash"
                                    type="Images"/>
                                <document
                                    jcr:primaryType="nt:unstructured"
                                    assetGroup="media"
                                    assetMimetype="[application/vnd.openxmlformats,application/msword,application/vnd.ms-powerpoint,application/mspowerpoint,application/powerpoint,application/x-mspowerpoint,application/x-msexcel,application/x-excel,application/excel,application/vnd.ms-excel,application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document]"
                                    droptarget="file"
                                    resourceType="foundation/components/download"
                                    type="Images"/>
                                <video
                                    jcr:primaryType="nt:unstructured"
                                    assetGroup="media"
                                    assetMimetype="video/*"
                                    droptarget="video"
                                    resourceType="foundation/components/video"
                                    type="Images"/>
                                <fragment
                                    jcr:primaryType="nt:unstructured"
                                    assetGroup="media"
                                    assetMimetype="text/html"
                                    droptarget="fragment"
                                    resourceType="dam/cfm/components/contentfragment"
                                    type="Content Fragment"/>
                                <experiencefragment
                                    jcr:primaryType="nt:unstructured"
                                    assetGroup="content"
                                    assetMimetype="text/html"
                                    droptarget="experiencefragment"
                                    resourceType="cq/experience-fragments/editor/components/experiencefragment"
                                    type="experiencefragment"/>
                            </assetToComponentMapping>
                        </cq:authoring>
                        <jcr:content
                            jcr:primaryType="nt:unstructured"
                            mergeList="{Boolean}true"/>
                    </bmc-default>
                </responsivegrid>
            </components>
        </foundation>
    </wcm>
</jcr:root>
